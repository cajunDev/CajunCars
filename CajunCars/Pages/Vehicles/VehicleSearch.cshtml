<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no"/>
    <link rel="stylesheet" href="/assets/css/main.css"/>
    <noscript>
        <link rel="stylesheet" href="/assets/css/noscript.css"/>
    </noscript>
</head>
<body class="is-preload">

<!-- Page Wrapper -->
<div id="page-wrapper">
<div>
    <form method="post" enctype="multipart/form-data">
        List Vehicles By Type:
        <input type="text" asp-for="VSType">
        <input type="submit" value="Submit">
    </form>
    <br><br>
    @foreach (var currEmp in VehicleList.GetVehicleListType(Model.VSType))
    {
        @currEmp
        <br>
    }
</div>

<div>
    <form method="post" enctype="multipart/form-data">
        List Vehicles By Color:
        <input type="text" asp-for="VSColor">
        <input type="submit" value="Submit">
    </form>
    <br><br>
    @foreach (var currEmp in VehicleList.GetVehicleListColor(Model.VSColor))
    {
        @currEmp
        <br>
    }
</div>

<div>
    <form method="post" enctype="multipart/form-data">
        List Vehicles By Minimum Horse Power:
        <input type="text" asp-for="VSHP">
        <input type="submit" value="Submit">
    </form>
    <br><br>
    @foreach (var currEmp in VehicleList.GetVehicleListHP(Model.VSHP))
    {
        @currEmp
        <br>
    }
</div>

<div>
    <a class="button primary" asp-page="./Index">Back to List</a>
</div>



</div>

<!-- Scripts -->
<script src="/assets/js/jquery.min.js"></script>
<script src="/assets/js/jquery.scrollex.min.js"></script>
<script src="/assets/js/browser.min.js"></script>
<script src="/assets/js/breakpoints.min.js"></script>
<script src="/assets/js/util.js"></script>
<script src="/assets/js/main.js"></script>

</body>
</html>