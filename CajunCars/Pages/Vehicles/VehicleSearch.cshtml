<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no"/>
    <link rel="stylesheet" href="/assets/css/main.css"/>
    <noscript>
        <link rel="stylesheet" href="/assets/css/noscript.css"/>
    </noscript>
</head>
<body class="is-preload">

<!-- Page Wrapper -->
<div id="page-wrapper">
    <div>
        <form method="post" enctype="multipart/form-data">
            List Vehicles By Type:
            @*   <input type="text" asp-for="VSType"> *@

            <label for="cars">Choose a Type:</label>
            <select asp-for="VSType">
                <option value=""></option>
                <option value="Sedan">Sedan</option>
                <option value="SUV">SUV</option>
                <option value="Sports Car">Sports Car</option>
                <option value="PickUp">Pick Up</option>
            </select>
            <input type="submit" value="Submit">
        </form>
        <br><br>
        <table>

            @foreach (var currEmp in VehicleList.GetVehicleListType(Model.VSType))
            {
                
            <tr>
                <td>@currEmp</td>
            </tr>
            }

        </table>
    </div>


    <div>
        <form method="post" enctype="multipart/form-data">
            List Vehicles By Type:
            @*   <input type="text" asp-for="VSType"> *@

            <label for="carmodels">Choose a Model:</label>
            <select asp-for="VSModel">
                <option value=""></option>
                <option value="Toyota">Toyota</option>
                <option value="Ford">Ford</option>
                <option value="BMW">BMW</option>
                <option value="Audi">Audi</option>
                <option value="Mercedes">Mercedes</option>
            </select>
            <input type="submit" value="Submit">
        </form>
        <br><br>
        <table>

            @foreach (var currEmp in VehicleList.GetVehicleListModel(Model.VSModel))
            {
                
            <tr>
                <td>@currEmp</td>
            </tr>
            }

        </table>
    </div>

    <div>
        <form method="post" enctype="multipart/form-data">
            List Vehicles By Color:
            <input type="text" asp-for="VSColor">
            <input type="submit" value="Submit">
        </form>
        <br><br>
        <table>

            @foreach (var currEmp in VehicleList.GetVehicleListColor(Model.VSColor))
            {
                
            <tr>
                <td>@currEmp</td>
            </tr>
            }

        </table>
    </div>


    <div>
        <form method="post" enctype="multipart/form-data">
            List Vehicles By Minimum Price:
            <input type="text" asp-for="VSPrice">
            <input type="submit" value="Submit">
        </form>
        <br><br>
        <table>

            @foreach (var currEmp in VehicleList.GetVehicleListPrice(Model.VSPrice))
            {
                
            <tr>
                <td>@currEmp</td>
            </tr>
            }

        </table>
    </div>


    <div>
        <form method="post" enctype="multipart/form-data">
            List Vehicles By Minimum Horse Power:
            <input type="text" asp-for="VSHP">
            <input type="submit" value="Submit">
        </form>
        <br><br>
        <table>

            @foreach (var currEmp in VehicleList.GetVehicleListHP(Model.VSHP))
            {
                
            <tr>
                <td>@currEmp</td>
            </tr>
            }

        </table>
    </div>

    <div>
        <a class="button primary" asp-page="./Index">Back to List</a>
    </div>


</div>

<!-- Scripts -->
<script src="/assets/js/jquery.min.js"></script>
<script src="/assets/js/jquery.scrollex.min.js"></script>
<script src="/assets/js/browser.min.js"></script>
<script src="/assets/js/breakpoints.min.js"></script>
<script src="/assets/js/util.js"></script>
<script src="/assets/js/main.js"></script>

</body>
</html>